<!-- Display the title of the page in the HTML, which can help SEO -->
<% if (title) { %>
<h1><%= title %></h1>
<% } else { res.redirect('/') } %> <%- messages() %>

<!-- Displays the login form -->

<form class="login">
	<label
		>Email:
		<input type="text" id="account_email" name="account_email" required />
	</label>
	<label
		>Password:
		<input
			type="text"
			id="account_password"
			name="account_password"
			pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
			required />
	</label>
	<div>
		<p>
			Note: Passwords must be at least 12 characters, contain one capital
			letter, one number, one special character
		</p>
	</div>
	<input type="submit" value="Login" />
	<p>No Account? <a href="/account/register">Sign Up</a></p>
</form>
